@page
@using BabyPedia.Data
@using Microsoft.EntityFrameworkCore
@inject BabyPediaContext BabyPediaContext
@{
    ViewBag.Title = "Patient Record";
    Layout = "_Layout";

    var patientRecord = await BabyPediaContext.Children.ToListAsync();
}


<div class="mx-auto mt-4">
    <h1 class="text-center">
        <p class="text-center fw-bold text-primary">
            @ViewBag.Title
        </p>
    </h1>
    @if (patientRecord.Any())
    {
        <table class="table m-2 table-borderless">
            <thead>
            <tr>
                <th scope="col" class="text-primary">Child's Name</th>
                <th scope="col"></th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var i in patientRecord) //add patient id 
            {
                <tr>
                    <th scope="row" class="">@i.FirstName @i.LastName</th>
                    <th>
                        <a href="./childinformation/@i.Id" class="btn btn-primary border-0" style="background-color: #FF9E7A !important;">Child Information</a>
                    </th>
                    <th>
                        <a href="./immunizationrecord/@i.Id" class="btn btn-primary border-0" style="background-color: #1C88C6 !important;">Immunization Record</a>
                    </th>
                    <th>
                        <a href="/pedia/addimmunizationrecord?id=@i.Id" class="btn btn-primary border-0" style="background-color: #FF9E7A !important;">Add Immunization Record Entry</a>
                    </th>
                </tr>
            }

            @* <tr> *@
            @*     <th scope="row" class="">John Dela Cruz</th> *@
            @*     <th> *@
            @*         <button class="btn btn-primary border-0" style="background-color: #FF9E7A !important;">Child Information</button> *@
            @*     </th> *@
            @*     <th> *@
            @*         <button class="btn btn-primary border-0" style="background-color: #1C88C6 !important;">Immunization Record</button> *@
            @*     </th> *@
            @*     <th> *@
            @*         <button class="btn btn-primary border-0" style="background-color: #FF9E7A !important;">Add Immunization Record Entry</button> *@
            @*     </th> *@
            @* </tr> *@

            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-danger" role="alert">
            No children registered!
        </div>
    }
</div>